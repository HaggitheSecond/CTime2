<Page
    x:Class="CTime2.Views.Overview.OverviewView"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:CTime2.Converter"
    xmlns:controls="using:CTime2.Controls"
    xmlns:micro="using:Caliburn.Micro">
    
    <Page.Resources>
        <converter:FormatStringConverter x:Key="CurrentTimeToStringConverter" FormatString="hh\:mm\:ss" />
    </Page.Resources>
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">

            <TextBlock Text="{x:Bind ViewModel.WelcomeMessage, Mode=OneWay}"
                       Style="{ThemeResource TitleTextBlockStyle}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0, 10, 0, 10" />

            <controls:UserImage Width="96"
                                Height="96"
                                Image="{x:Bind ViewModel.MyImage, Mode=OneWay}" />

        </StackPanel>

        <TextBlock Text="{x:Bind ViewModel.ActiveItem.DisplayName, Mode=OneWay}"
                   Margin="20"
                   Grid.Row="1"
                   HorizontalAlignment="Center" />

        <ContentControl micro:View.Model="{Binding ActiveItem}"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"
                        Grid.Row="2" />

        <StackPanel Grid.Row="3"
                    Margin="0, 0, 0, 20">
            <TextBlock Style="{ThemeResource TitleTextBlockStyle}"
                       HorizontalAlignment="Center"
                       x:Uid="CurrentTimeTextBlock"
                       Text="~Aktuelle Zeit:" />

            <TextBlock HorizontalAlignment="Center"
                       Text="{x:Bind ViewModel.CurrentTime, Converter={StaticResource CurrentTimeToStringConverter}, Mode=OneWay}"
                       FontSize="40" />
        </StackPanel>

    </Grid>
</Page>
