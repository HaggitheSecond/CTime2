<Page
    x:Class="CTime2.Views.Band.BandView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="using:CTime2.Converter">
    
    <Page.Resources>
        <converter:BooleanToNullableBooleanConverter x:Key="BooleanToNullableBooleanConverter" />
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <CheckBox IsChecked="{x:Bind ViewModel.IsBandConnected, Mode=OneWay, Converter={StaticResource BooleanToNullableBooleanConverter}}">Band ist mit Handy verbunden</CheckBox>
            <CheckBox IsChecked="{x:Bind ViewModel.IsBandTileInstalled, Mode=OneWay, Converter={StaticResource BooleanToNullableBooleanConverter}}">Tile installiert</CheckBox>
            <Button Click="{x:Bind ViewModel.RegisterTileAsync}">Tile installieren</Button>
            <Button Click="{x:Bind ViewModel.UnRegisterTileAsync}">Tile entfernen</Button>
            <CheckBox IsChecked="{x:Bind ViewModel.IsConnectedWithBandTile, Mode=OneWay, Converter={StaticResource BooleanToNullableBooleanConverter}}">Mit Tile verbunden</CheckBox>
            <Button Click="{x:Bind ViewModel.ConnectWithTile}">Verbinden</Button>
            <Button Click="{x:Bind ViewModel.DisconnectFromTile}">Verbindung trennen</Button>
        </StackPanel>
    </Grid>
</Page>
