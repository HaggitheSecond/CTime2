<Page
    x:Class="CTime2.Views.Settings.SettingsView"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:micro="using:Caliburn.Micro"
    xmlns:reactiveUi="using:Caliburn.Micro.ReactiveUI">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <Pivot ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}"
               SelectedItem="{Binding ActiveItem, Mode=TwoWay}">
            <Pivot.HeaderTemplate>
                <DataTemplate x:DataType="reactiveUi:ReactiveScreen">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Home" />
                        <TextBlock Margin="5, 0, 0, 0" Text="{x:Bind DisplayName}" />
                    </StackPanel>
                </DataTemplate>
            </Pivot.HeaderTemplate>
            <Pivot.ItemTemplate>
                <DataTemplate x:DataType="reactiveUi:ReactiveScreen">
                    <ContentControl micro:View.Model="{Binding}"
                                    VerticalContentAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    />
                </DataTemplate>
            </Pivot.ItemTemplate>
        </Pivot>

    </Grid>
</Page>
