<Page
    x:Class="CTime2.Views.StampTime.StampTimeView"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Button Content="~Einstempeln"
                x:Uid="CheckInButton"
                Grid.Row="0" 
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Margin="10, 10, 10, 5"
                Background="Green" 
                Click="{x:Bind ViewModel.CheckIn}"
                IsEnabled="{x:Bind ViewModel.CanCheckIn, Mode=OneWay}" />

        <Button Content="~Ausstempeln"
                x:Uid="CheckOutButton"
                Grid.Row="1"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Margin="10, 5, 10, 10"
                Background="Red"
                Click="{x:Bind ViewModel.CheckOut}"
                IsEnabled="{x:Bind ViewModel.CanCheckOut, Mode=OneWay}" />
        
    </Grid>
</Page>
